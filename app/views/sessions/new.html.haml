%section.sign_in.container
  .row
    .span10.offset1
      = form_tag sign_in_path, class: 'sign_in' do
        %header
          %h1 Sign in
        %fieldset
          = label_tag 'Email Address'
          = text_field_tag :email
          = label_tag 'Password'
          = password_field_tag :password
        %fieldset.action
          %input(type="submit" value="Sign in" class="btn")
