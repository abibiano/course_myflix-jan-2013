%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2 My Queue
        = form_tag update_multiple_queue_items_path, :method => :put do
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queue_items.each do |queue_item|
                = fields_for "queue_items[]", queue_item do |f|
                  %tr                
                    %td
                      = f.text_field :position
                    %td
                      = link_to queue_item.video.title, video_path(queue_item.video)
                    %td                 
                      = queue_item.review_rate
                    %td
                      = link_to queue_item.video.category.name
                    %td
                      = link_to queue_item_path(queue_item), method: :delete do
                        %i.icon-remove 
          = button_to "Update Instant Queue", nil, class: "btn"
