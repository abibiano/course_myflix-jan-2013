%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        %img(src="#{@video.large_cover_url}")
      .video_info.span3
        %h3= @video.title
        %h2 Average Rating: #{@video.average_rating}
        %p= @video.description
%section.reviews.container
  .row
    .span10.offset1
      = bootstrap_form_for([@video, @review]) do |f|
        = f.select :rating, [['5 Stars', 5], ['4 Stars', 4], ['3 Stars', 3], ['2 Stars', 2], ['1 Star', 1]]
        = f.text_area :content, label: "Write Review", rows: 6, class: 'span6'
        %fieldset.actions.clearfix
          = f.secondary 'Submit'
          = button_tag  'Cancel', :type => 'reset', :class => 'btn'
      %header
        %h3 User Reviews (#{@video.reviews.count})
      %ul
        - @video.reviews.all.each do |review|
          %article.review
            %li.row
              .span2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.full_name}</a>
              .span8
                %p= review.content
