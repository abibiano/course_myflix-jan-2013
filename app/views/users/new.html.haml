%section.register.container
  .row
    .span10.offset1
      = bootstrap_form_for(@user, html: { class: 'form-horizontal' }) do |f|
        %header
          %h1 Register
        %fieldset
          = f.alert_message "Please fix the errors below."
          = f.text_field :email
          = f.password_field :password
          = f.text_field :full_name
          = f.actions do
            = f.secondary 'Sign Up'
            %script(src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button" data-key="pk_test_uVxGWZ8GZkpNQKOt8WqRzuxM" data-amount="999" data-name="MyFlix" data-description="1 month suscription ($9.99)")
