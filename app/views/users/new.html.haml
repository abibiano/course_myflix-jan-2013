%section.register.container
  .row
    .span10.offset1
      = bootstrap_form_for(@user, html: { class: 'form-horizontal' }) do |f|
        %header
          %h1 Register
        %fieldset
          = f.alert_message "Please fix the errors below."
          = f.text_field :email
          = f.password_field :password
          = f.text_field :full_name
          = f.actions do
            = f.secondary 'Sign Up'